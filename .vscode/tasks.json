{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "bun: watch",
      "command": "bun",
      "args": ["run", "watch"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "esbuild",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^\\s*âœ˜ \\[ERROR\\] (.*)$",
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[watch\\] build started",
          "endsPattern": "^\\[watch\\] build finished"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "type": "shell",
      "label": "bun: compile",
      "command": "bun",
      "args": ["run", "compile"],
      "group": "build",
      "problemMatcher": []
    }
  ]
}
